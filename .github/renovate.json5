{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':dependencyDashboard',
    ':disableRateLimiting',
    ':semanticCommits',
  ],
  assignees: [
    'willianpaixao',
  ],
  reviewers: [
    'willianpaixao',
  ],
  automerge: true,
  automergeType: 'pr',
  automergeStrategy: 'squash',
  platformAutomerge: true,
  ignoreTests: false,
  assignAutomerge: true,
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  dependencyDashboardLabels: [
    'dependencies',
    'renovate',
  ],
  dependencyDashboardFooter: 'Need help? See the [Renovate documentation](https://docs.renovatebot.com/)',
  ignorePaths: [
    '**/*.sops.*',
    '**/docs/**',
  ],
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  prConcurrentLimit: 4,
  prHourlyLimit: 0,
  semanticCommitScope: '{{depName}}',
  semanticCommitType: 'chore',
  schedule: [
    'on saturday',
  ],
  flux: {
    managerFilePatterns: [
      '//(^|/)kubernetes/.+\\.ya?ml$//',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '//(^|/)kubernetes/.+\\.ya?ml$//',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '//(^|/)kubernetes/.+\\.ya?ml$//',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Process Flux HelmRepository/OCIRepository across clusters',
      managerFilePatterns: [
        '//(^|/)kubernetes/.+\\.ya?ml$//',
      ],
      matchStrings: [
        'registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)',
      ],
      datasourceTemplate: 'helm',
    },
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'type/major',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
      ],
      addLabels: [
        'type/minor',
      ],
    },
    {
      matchUpdateTypes: [
        'patch',
      ],
      addLabels: [
        'type/patch',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    {
      matchUpdateTypes: [
        'pin',
      ],
      addLabels: [
        'type/pin',
      ],
    },
    {
      matchUpdateTypes: [
        'digest',
      ],
      addLabels: [
        'type/digest',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'ghcr.io/bjw-s/helm/app-template',
        'ghcr.io/bjw-s-labs/helm/app-template',
        'ghcr.io/prometheus-community/charts/kube-prometheus-stack',
      ],
      pinDigests: false,
    },
    {
      groupName: 'immich',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        '/^ghcr\\.io/immich-app/immich-/',
      ],
    },
    {
      groupName: 'home-operations-arr-apps',
      matchDatasources: [
        'docker',
      ],
      addLabels: [
        'renovate/arr-apps',
      ],
      matchPackageNames: [
        '/^ghcr\\.io/home-operations/(sonarr|radarr|prowlarr|bazarr)/',
      ],
    },
    {
      groupName: 'system-upgrade-controller',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'docker.io/rancher/system-upgrade-controller',
      ],
    },
    {
      groupName: 'github-actions',
      matchManagers: [
        'github-actions',
      ],
      addLabels: [
        'renovate/github-actions',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    {
      groupName: 'python-dependencies',
      matchManagers: [
        'pip_requirements',
      ],
      matchFileNames: [
        'requirements.txt',
        'ansible/requirements.txt',
      ],
      addLabels: [
        'renovate/python',
      ],
      schedule: [
        'on saturday',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      semanticCommitType: 'fix',
      semanticCommitScope: 'security',
      automerge: true,
      automergeType: 'pr',
    },
    {
      groupSlug: 'critical-infrastructure-major',
      matchDatasources: [
        'docker',
        'helm',
      ],
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'type/major',
        'critical',
      ],
      automerge: false,
      matchPackageNames: [
        '/cilium/',
        '/cert-manager/',
        '/external-dns/',
        '/ingress-nginx/',
        '/kube-prometheus-stack/',
      ],
    },
    {
      description: 'Deduplicate Flux sources across clusters',
      matchDatasources: [
        'helm',
      ],
      matchFileNames: [
        'kubernetes/raspberry/flux/repositories/**',
        'kubernetes/turing/flux/repositories/**',
        'kubernetes/main/flux/repositories/**',
      ],
      enabled: true,
      separateMultipleMajor: false,
      separateMinorPatch: false,
    },
  ],
  hostRules: [
    {
      description: 'Suppress registryUrls warning for OCI registries',
      matchHost: 'ghcr.io',
      abortOnError: false,
      abortIgnoreStatusCodes: [
        404,
      ],
    },
  ],
}
