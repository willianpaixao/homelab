{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':dependencyDashboard',
    ':disableRateLimiting',
    ':semanticCommits',
  ],
  assignees: [
    'willianpaixao',
  ],
  reviewers: [
    'willianpaixao',
  ],
  // Auto-merge configuration
  automerge: true,
  automergeType: 'pr',
  automergeStrategy: 'squash',
  platformAutomerge: true,
  ignoreTests: false,
  assignAutomerge: true,
  // Dependency dashboard
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  dependencyDashboardLabels: ['dependencies', 'renovate'],
  dependencyDashboardFooter: "Need help? See the [Renovate documentation](https://docs.renovatebot.com/)",
  ignorePaths: [
    '**/*.sops.*',
    '**/docs/**',
  ],
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  prConcurrentLimit: 4,
  prHourlyLimit: 0,
  semanticCommitScope: '{{depName}}',
  semanticCommitType: 'chore',
  schedule: [
    'on saturday',
  ],
  flux: {
    fileMatch: [
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    fileMatch: [
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    fileMatch: [
      '/(^|/)kubernetes/.+\\.ya?ml$/',
    ],
  },
  regexManagers: [
    {
      description: 'Process Flux HelmRepository/OCIRepository across clusters',
      fileMatch: [
        '/(^|/)kubernetes/.+\\.ya?ml$/',
      ],
      matchStrings: [
        'registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)',
      ],
      datasourceTemplate: 'helm',
    },
  ],
  packageRules: [
    // Update type labels
    {
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'type/major',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
      ],
      addLabels: [
        'type/minor',
      ],
    },
    {
      matchUpdateTypes: [
        'patch',
      ],
      addLabels: [
        'type/patch',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    {
      matchUpdateTypes: [
        'pin',
      ],
      addLabels: [
        'type/pin',
      ],
    },
    {
      matchUpdateTypes: [
        'digest',
      ],
      addLabels: [
        'type/digest',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    // Disable digest pinning for frequently updated charts
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'ghcr.io/bjw-s/helm/app-template',
        'ghcr.io/bjw-s-labs/helm/app-template',
        'ghcr.io/prometheus-community/charts/kube-prometheus-stack'
      ],
      pinDigests: false,
    },
    // Group Immich components
    {
      groupName: 'immich',
      matchDatasources: [
        'docker',
      ],
      matchPackagePatterns: [
        '^ghcr\\.io/immich-app/immich-',
      ],
    },
    // Group *arr apps from home-operations
    {
      groupName: 'home-operations-arr-apps',
      matchDatasources: [
        'docker',
      ],
      matchPackagePatterns: [
        '^ghcr\\.io/home-operations/(sonarr|radarr|prowlarr|bazarr)',
      ],
      addLabels: [
        'renovate/arr-apps',
      ],
    },
    // Group system-upgrade-controller across clusters
    {
      groupName: 'system-upgrade-controller',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'docker.io/rancher/system-upgrade-controller',
      ],
    },
    // Group GitHub Actions updates
    {
      groupName: 'github-actions',
      matchManagers: [
        'github-actions',
      ],
      addLabels: [
        'renovate/github-actions',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    // Group Python dependencies
    {
      groupName: 'python-dependencies',
      matchManagers: [
        'pip_requirements',
      ],
      matchFileNames: [
        'requirements.txt',
        'ansible/requirements.txt',
      ],
      addLabels: [
        'renovate/python',
      ],
      schedule: [
        'on saturday',
      ],
    },
    // Security updates - automerge and higher priority
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      semanticCommitType: 'fix',
      semanticCommitScope: 'security',
      automerge: true,
      automergeType: 'pr',
    },
    // Separate PRs for major updates of critical infrastructure
    {
      groupSlug: 'critical-infrastructure-major',
      matchDatasources: [
        'docker',
        'helm',
      ],
      matchPackagePatterns: [
        'cilium',
        'cert-manager',
        'external-dns',
        'ingress-nginx',
        'kube-prometheus-stack',
      ],
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'type/major',
        'critical',
      ],
      automerge: false,
    },
    // Handle duplicate registry URLs across multi-cluster setup
    {
      description: 'Deduplicate Flux sources across clusters',
      matchDatasources: [
        'helm',
      ],
      matchFileNames: [
        'kubernetes/raspberry/flux/repositories/**',
        'kubernetes/turing/flux/repositories/**',
        'kubernetes/main/flux/repositories/**',
      ],
      enabled: true,
      separateMultipleMajor: false,
      separateMinorPatch: false,
    },
  ],
  hostRules: [
    {
      description: 'Suppress registryUrls warning for OCI registries',
      matchHost: 'ghcr.io',
      abortOnError: false,
      abortIgnoreStatusCodes: [404],
    },
  ],
}
