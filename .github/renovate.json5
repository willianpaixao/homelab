{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':automergeBranch',
    ':automergeDigest',
    ':dependencyDashboard',
    ':disableRateLimiting',
    ':semanticCommits',
  ],
  assignees: [
    'willianpaixao',
  ],
  reviewers: [
    'willianpaixao',
  ],
  assignAutomerge: true,
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  ignorePaths: [
    '**/*.sops.*',
    '**/docs/**',
  ],
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  schedule: [
    'on saturday',
  ],
  flux: {
    fileMatch: [
      '(^|/)kubernetes/.+\\.ya?ml$',
    ],
  },
  'helm-values': {
    fileMatch: [
      '(^|/)kubernetes/.+\\.ya?ml$',
    ],
  },
  kubernetes: {
    fileMatch: [
      '(^|/)kubernetes/.+\\.ya?ml$',
    ],
  },
  packageRules: [
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchPackageNames: [
        '/app-template/',
      ],
    },
  ],
}
